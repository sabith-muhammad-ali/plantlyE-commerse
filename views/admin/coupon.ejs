  <!-- delete coupon  -->
  <script>
    async function deleteCoupon(element) {
      const couponID = element.getAttribute("data-coupon-id");
      console.log("id", couponID);
      try {
        const result = await Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!",
        });
        if (result.isConfirmed) {
          const response = await fetch("/admin/delete-coupon", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              coupon: couponID,
            }),
          });
          if (response.ok) {
            const data = await response.json();
            if (data.remove === true) {
              Swal.fire({
                title: "Deleted!",
                text: "Your coupon has been deleted.",
                icon: "success"
              });
            }
          }
        }
        location.reload()
      } catch (error) {
        console.log("error:", error);
      }
    }
  </script>
