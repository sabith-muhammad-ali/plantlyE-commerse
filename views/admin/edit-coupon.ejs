    <script>
      document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('.forms-sample').addEventListener('submit', function (event) {
          const name = document.getElementById('exampleInputName1').value.trim();
          const discountAmount = document.getElementById('exampleInputEmail3').value.trim();
          const criteriaAmount = document.getElementById('exampleInputCity1').value.trim();
          const expiryDate = document.getElementById('exampleInputPassword4').value.trim();

          const discountAmountValue = parseFloat(discountAmount);
          const criteriaAmountValue = parseFloat(criteriaAmount);

          const nameError = document.getElementById('nameError');
          const discountAmountError = document.getElementById('discountAmountError');
          const criteriaAmountError = document.getElementById('criteriaAmountError');
          const expiryDateError = document.getElementById('expiryDateError');

          let isValid = true;

          nameError.textContent = '';
          discountAmountError.textContent = '';
          criteriaAmountError.textContent = '';
          expiryDateError.textContent = '';

          if (name === '') {
            nameError.textContent = 'Name is required';
            isValid = false;
          }

          if (discountAmount === '') {
            discountAmountError.textContent = 'Discount Amount is required';
            isValid = false;
          } else if (isNaN(discountAmountValue) || discountAmountValue <= 0) {
            discountAmountError.textContent = 'Discount Amount must be a valid positive number';
            isValid = false;
          }

          if (criteriaAmount === '' || isNaN(criteriaAmountValue) || criteriaAmountValue <= 0) {
            criteriaAmountError.textContent = 'Criteria Amount must be a valid positive number';
            isValid = false;
          }


          if (discountAmountValue === criteriaAmountValue) {
            discountAmountError.textContent = 'Discount Amount and Criteria Amount cannot be the same';
            criteriaAmountError.textContent = 'Discount Amount and Criteria Amount cannot be the same';
            isValid = false;
          }

          if (discountAmountValue >= criteriaAmountValue) {
            discountAmountError.textContent = 'Discount Amount must be less than Criteria Amount';
            isValid = false;
          }

      const currentDate = new Date();
      const minExpiryDate = new Date(currentDate);
      minExpiryDate.setDate(currentDate.getDate() + 1);

      if (expiryDate === '') {
        expiryDateError.textContent = 'Expiry Date is required';
        isValid = false;
      } else {
        const selectedDate = new Date(expiryDate);
        if (selectedDate < minExpiryDate) {
          expiryDateError.textContent = 'Expiry Date must be at least one day after the current date';
          isValid = false;
        }
      }

          if (!isValid) {
            event.preventDefault();
          }
        });
      });
