    <script>
        $(document).ready(function() {
            $('.file-upload-browse').on('click', function() {
                $('#image').click();
            });
    
            $('#image').on('change', function() {
                var input = this;
                var imagePreviews = $('#imagePreviews');
                imagePreviews.empty();
                if (input.files && input.files.length) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        var preview = $('<img>').addClass('img-thumbnail').attr('src', e.target.result);
                        preview.css({'max-width': '100px', 'max-height': '100px'}); // Set maximum width and height
                        imagePreviews.append(preview);
                    };
                    reader.readAsDataURL(input.files[0]);
                }
            });
        });
    </script>
    <script>
      function validateForm() {
          var name = document.getElementById('exampleInputName1').value.trim();
          var description = document.getElementById('exampleInputPassword4').value.trim();
          var link = document.getElementById('exampleInputPassword4').value.trim();
          var image = document.getElementById('image').files;
  
          var nameError = document.getElementById('nameError');
          var descriptionError = document.getElementById('descriptionError');
          var linkError = document.getElementById('linkError');
          var imageError = document.getElementById('imageError');
  
          nameError.innerHTML = "";
          descriptionError.innerHTML = "";
          linkError.innerHTML = "";
          imageError.innerHTML = "";
  
          var isValid = true;
  
          if (name === "") {
              nameError.innerHTML = "Name is required";
              isValid = false;
          }
  
          if (description === "") {
              descriptionError.innerHTML = "Description is required";
              isValid = false;
          }
  
          if (link === "") {
              linkError.innerHTML = "Link is required";
              isValid = false;
          }
  
          if (image.length === 0) {
              imageError.innerHTML = "Image is required";
              isValid = false;
          }
  
          return isValid;
      }
