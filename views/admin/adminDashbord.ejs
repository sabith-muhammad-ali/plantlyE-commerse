  var top3Products = {
    datasets: [{
      data:   ["<%=topPerformingProducts[0].totalSold%>","<%=topPerformingProducts[1].totalSold%>","<%=topPerformingProducts[2].totalSold%>"],
      backgroundColor: [
        'rgba(255, 99, 132, 0.5)',
        'rgba(54, 162, 235, 0.5)',
        'rgba(255, 206, 86, 0.5)',
        'rgba(75, 192, 192, 0.5)',
        'rgba(153, 102, 255, 0.5)',
        'rgba(255, 159, 64, 0.5)'
      ],
      borderColor: [
        'rgba(255,99,132,1)',
        'rgba(54, 162, 235, 1)',
        'rgba(255, 206, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)'
      ],
    }],

    // These labels appear in the legend and in the tooltips when hovering different arcs
    labels:["<%=topPerformingProducts[0].productName%>","<%=topPerformingProducts[1].productName%>","<%=topPerformingProducts[2].productName%>"]
  };
  var top3Categories = {
    datasets: [{
      data:  ["<%=topPerformingCategories[0].totalSold%>","<%=topPerformingCategories[1].totalSold%>","<%=topPerformingCategories[2].totalSold%>"],
