    <script>
       function replaceImage(imageName,product_id) {
          console.log(imageName);
          console.log('prodctid',product_id);
           fetch('/admin/deleteimage', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                  imageName: imageName,
                  productId:product_id
              })
          }).then(response => {
             return  response.json()
          }).then(data=>{
            if(data){
              location.reload()
            }
          }).catch(error=>{
            console.log(error);
          })
      }
  </script>






