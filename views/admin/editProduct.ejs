              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="productId" value="<%= productData._id %>">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputName1" class="text-white">Product Name</label>
                                        <input type="text" class="form-control text-white" id="name" name="name" placeholder="Product Name" value="<%= productData.name %>">
                                    </div>
                                    <div class="form-group">
                                        <label class="text-white">Category</label>
                                        <select class="form-control text-white" name="categoryId">
                                            <% for (let i = 0; i < category.length; i++) { %>
                                                <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectGender" class="text-white">Price</label>
                                        <input type="number" class="form-control text-white" name="price" id="price" placeholder="Price" value="<%= productData.price %>">
                                    </div>
                                    <div class="form-group">
                                      <div class="form-group">
                                        <label for="exampleInputFile" class="text-white">Product Images</label>
                                        <input type="file" class="form-control text-white" id="productImage" name="image" multiple><small id="fileHelp" class="form-text text-white">Choose images for the product.</small>
                                    </div>
                                  </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputCity1" class="text-white">Stock</label>
                                        <input type="text" class="form-control text-white" id="stock" name="stock" placeholder="0" value="<%= productData.quantity %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleTextarea1" class="text-white">Description</label>
                                        <textarea class="form-control text-white" name="description" id="description" rows="6"><%= productData.description %></textarea>
                                    </div>
                                    <div class="row">
                                      <% for (let i = 0; i < 4; i++) { %>
                                          <div class="col-md-3">
                                              <div class="preview-image" id="imageContainer<%= i %>">
                                                  <% if (productData.images[i]) { %>
                                                      <img src="assets/multer/<%= productData.images[i] %>" id="image<%= i %>" style="height: 200px; width: 100%; object-fit: cover;" alt="...">
                                                      <button type="button" class="btn btn-danger mt-2 w-100" onclick="replaceImage('<%= productData.images[i] %>', '<%= productData._id %>')">Replace</button>
                                                  <% } %>
                                              </div>
                                          </div>
                                      <% } %>
                                  </div>
                                </div>
                            </div>
