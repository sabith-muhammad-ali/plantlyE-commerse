    <script>
      document.getElementById('myForm').addEventListener('submit',(event) => {
        event.preventDefault();

        const name = document.getElementById('name').value;
        const description = document.getElementById('description').value;
        const id = document.getElementById('id').value;
        const pTag = document.getElementById("categoryMessage")

        if (!name || !description) {
        pTag.innerText = "Please enter both name and description.";
        return;
        }

        fetch('/admin/categoryedit',{
          method:'POST',
          headers:{
            'Content-Type':'application/json'
          },
          body:JSON.stringify({name,description,id})
        })
        .then(response => {
          if(!response.ok){
            console.log('network response not ok');
          }
          return  response.json();
        })
        .then(data => {
          console.log(data);
          if (data.ok) {
            location.href='/admin/category'
          } else if (data.exits) {
            pTag.innerText = "Category already exists.";
          }
          console.log('form submission successful:',data);
        })
        .catch(error => {
          console.log('ther was a problem with the form submission:',error);
        });
      });
